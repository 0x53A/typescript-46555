{
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}