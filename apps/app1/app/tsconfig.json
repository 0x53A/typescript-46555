{
  "extends": "../../../tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "outDir": "./../../../out/app"
  },
  "include": [
    "src",
    "src/**/*",
    "src/**/*.json",
  ],
  "references": [
    { "path": "../client-components"}
  ]
}
